# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = i3bar
  colors = false
  interval = 5
  separator = "  "
}

order += "disk /"
order += "disk /home"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
order += "volume master"
order += "tztime local"

disk "/" {
  format = "/ %avail"
  prefix_type = "decimal"
}

disk "/home" {
  format = "/home %avail"
  prefix_type = "decimal"
}

ipv6 {
  format_up = "ipv6 %ip"
  format_down = ""
}

wireless _first_ {
  format_up = "%essid %ip"
  format_down = ""
}

ethernet _first_ {
  format_up = "ether %ip"
  format_down = ""
}

battery 1 {
  format = "⚡ %percentage %remaining"
  hide_seconds = true
}

volume master {
  device = "pulse"
  mixer = "master"
  format = "♪ %volume"
  format_muted = "- %volume"
}

tztime local {
  format = "%d.%m %k:%M"
}
